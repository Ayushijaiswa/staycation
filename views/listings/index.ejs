    <a href="/listings/<%=list._id%>" class="listing-link">
      <div class="card col listing-card" style="width: 20rem;" >
    <img class="card-img-top" src="<%=list.image.url  %>" alt="Card image cap" style="height: 20rem;">
 
      
         <div class="card-body">
         <p class="card-text">
        <b><%=list.title %></b>
        <br>
        &#8377;
        <%=list.price.toLocaleString("en-IN")%>/night
        </p>

  </div>
</div>
</a>
  <% } %>
