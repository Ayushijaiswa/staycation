<%layout("/layouts/boilerplate")-%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
    <h3>new listing</h3>
    <form class="needs-validation" method="post" action="/listings" novalidate   enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" placeholder="title" name="listing[title]" id="" class="form-control" required/>
       <div class="valid-feedback">Title looks good</div>
    </div>
   
     <div class="mb-3">
        <label for="description" class="form-label">Description</label>
    <textarea type="text" placeholder="description" name="listing[description]" id="" class="form-control" required></textarea>
    <div class="valid-feedback">description looks good</div>
</div>
    
   
<div class="mb-3">
    <label for="image" class="form-label"> Upload image</label>
  <input type="file"  placeholder="upload image" name="listing[image]" id="" class="form-control" required>
</div>
<div class="row">
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label" > Price</label>
        <input type="number" placeholder="price" name="listing[price]" id="" class="form-control" required>
       <div class="invalid-feedback">Please enter valid price</div>
    </div>
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label"> Country</label>
    
        <input type="text" placeholder="country" name="listing[country]" id="" class="form-control" required>
     <div class="invalid-feedback">Please enter valid country name</div>
    </div>
        
    

</div>
<div class="mb-3">
            
    <label for="location" class="form-label"> Location</label>
    <input type="text" placeholder="location" name="listing[location]" id="" class="form-control" required>
      <div class="valid-feedback"></div>
</div>
   

    
  
    <button class="btn btn-dark add-btn mt3">Add</button>

   
</form>
</div>
</div>
</body>
